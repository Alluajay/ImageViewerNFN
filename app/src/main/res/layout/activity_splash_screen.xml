<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.allu.imageviewer.activity.SplashScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_margin="@dimen/splashScreen_margin"
                android:layout_width="@dimen/splashScreen_dimen"
                android:layout_height="@dimen/splashScreen_dimen"
                android:src="@mipmap/ic_launcher"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/splashScreen_text"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>
